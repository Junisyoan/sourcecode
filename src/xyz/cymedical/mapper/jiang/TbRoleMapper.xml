	<insert id="addRole" parameterType="String"> 
	
		 insert into tb_role  (name) values (#{name})
	
	</insert>

	<select id="selectName" parameterType="String" resultType="xyz.cymedical.entity.jiang.Tb_role" >
	
		select * from tb_role where name=#{name} 
